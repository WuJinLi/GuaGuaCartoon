<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView_item_comment_icon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/app_icon"
        />

    <TextView
        android:id="@+id/textView_item_comment_nickmame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/simpleDraweeView_item_comment_icon"
        android:text="nickmame"
        />

    <TextView
        android:id="@+id/textView_item_comment_postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_item_comment_nickmame"
        android:text="postTime"
        />

    <TextView
        android:id="@+id/textView_item_comment_replayNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="replayTo"
        />

    <TextView
        android:id="@+id/textView_item_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_item_comment_nickmame"
        android:layout_below="@+id/textView_item_comment_nickmame"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/simpleDraweeView_item_comment_icon"
        android:text="content"
        />
</RelativeLayout>
