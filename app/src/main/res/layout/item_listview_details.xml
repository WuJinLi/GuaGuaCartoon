<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

    <TextView
        android:id="@+id/textView_item_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#0f0"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView_item_details_lastCharpterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_item_details_title"
        android:layout_below="@+id/textView_item_details_title"
        android:text="lastCharpterTitle"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView_item_details_lastCharpterUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_item_details_title"
        android:layout_alignParentRight="true"
        android:text="lastCharpterUpdateTime"
        android:layout_alignBottom="@+id/textView_item_details_lastCharpterTitle"
        />

</RelativeLayout>
